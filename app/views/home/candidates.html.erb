
<h1>Candidates</h1>

<%= will_paginate @candidates%>

<ul>
  <% @candidates.each do |c| %>
    <li>
      <strong><%= link_to c.email, profile_path(c.profile)%> - <%= c.role %></strong>
      <% unless current_user == c %>
        <%= link_to 'Send message', new_conversation_path(to: c.id), class: 'btn btn-default btn-sm' %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate @candidates%>
