<p id="notice"><%= notice %></p>

<h1> Recent Jobs</h1>

<%= form_tag jobs_listing_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>

  <%= link_to "Advanced Search", new_search_path %>

<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Job type</th>
      <th>Description</th>
      <th>Position</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each_with_index do |job,index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to job.job_type, job %></td>
        <td><%= job.description %></td>
        <td><%= job.position %></td>
        <td><%= job.location %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
