<section id="title">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h1>Find a Job</h1>
				<h4>There is no better place to start</h4>
      </div>
    </div>
  </div>
</section>
<div class="sidebar-widget" id="jobsearch">
<form>
<div class="row">
  <div class="col-xs-6 col-xs-offset-1">
    <h2>Find a Job</h2>
    <div class="form-group col-xs-8 col-xs-offset-1" id="job-search-group">
      <%= form_tag jobs_listing_path, :method => 'get' do %>
          <p><%= text_field_tag :search, params[:search], id: 'job-search-group', class: 'form-control', placeholder: 'eg. Full Stack' %></p>
          <%= submit_tag "Search", class: 'btn btn-primary btn-lg' %>
      <% end %>
      <p><%= link_to "Advanced Search", new_search_path, method: :get %></p>

    </div>
  </div>
</div>
<section id="jobs">
	<div class="container">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<h2>Jobs</h2>

				<div class="jobs">
          <% @jobs.each do |job| %>
            <%= link_to  job_path(job), method: :get do %>
              <div class="feature">
                <div class="row">
                  <div class="col-xs-9 col-sm-4 col-md-5 col-lg-4 candidate-name">
                    <h5><%= job.position %></h5>
                    <p><strong><%= job.user.profile.name %></strong></p>
                    <p class="candidate-date"> Created <%=time_ago_in_words(job.payment.created_at)%> ago</p>
                  </div>
                  <div class="hidden-xs col-sm-6 col-md-5 col-lg-4 candidate-location">
                    <p><strong><%= job.location %></strong></p>
                  </div>
                  <div class="hidden-xs col-sm-6 col-md-5 col-lg-4">
                    <p><strong><%= job.job_type %></strong></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
