<div class="sidebar-widget" id="share">
	<h2>Social Network</h2>
	<ul>
    <% @socials.each do |social| %>
      <% if social.network == 'Github' %>
        <li>
          <%= link_to "https://github.com/#{social.username}", target: '_blank' do %>
            <span><i class="fa fa-github fa-3x" aria-hidden="true"></i><span>
          <% end %>
        </li>
        <li>
          <% elsif social.network == 'Linkden' %>
            <%= link_to "https://www.linkedin.com/in/#{social.username}", target: '_blank' do %>
              <span><i class="fa fa-linkedin-square fa-3x" aria-hidden="true"></i><span>
            <% end %>
        </li>
        <li>
          <% elsif social.network == 'Twitter' %>
            <%= link_to "https://twitter.com/#{social.username}", target: '_blank' do %>
              <span><i class="fa fa-twitter" aria-hidden="true"></i><span>
            <% end %>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <% if current_user == @profile.user %>
            <p>
               <%= link_to 'Delete', social, method: :delete, data: { confirm: 'Are you sure?' } %>
            </p>
          <% end %>
        <% end %>
      <% end %>
      </ul>
    <div class="pull-right">
      <% if user_signed_in? %>
        <% if current_user == @profile.user %>
          <%= link_to ' + Add New ', new_social_path, method: :get, class: 'btn btn-default btn-xs' %>
        <% end %>
      <% end %>
    </div>
  </div>
