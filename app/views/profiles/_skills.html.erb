
<div class="sidebar-widget" id="skills">
  <h2>Key skills</h2>
  <% @skills.each do |skill| %>
    <li class="badge"><%= skill.name %></li>

    <% if user_signed_in? %>
      <% if current_user == @profile.user %>
        <%= link_to 'Delete Skill', skill, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  <% end %>
  <hr>
  <div class="pull-right">
    <% if user_signed_in? %>
      <% if current_user == @profile.user %>
        <%= link_to ' + Add New Skill', new_skill_path, method: :get, class: 'btn btn-default btn-xs' %>
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to box_path(box) do %> <div class='col-md-6 col-md-offset-3 col-xs-12 text-center '>
 <div class='box-card'>
   <h1><%= box.title %></h1>
   <p><h3><%= box.description %><h3></p>
   <hr>
 </div>
</div>
<% end %>
