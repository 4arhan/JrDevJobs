<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Resume file</th>
      <th>Address</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.title %></td>
        <td><%= image_tag profile.image_url(:thumb) %></td>
        <td><%= profile.description %></td>
        <td><button><%= link_to "Download", profile.resume_file_url,
                        target: "_blank"%></button></td>
        <td><%= profile.address %></td>
        <td><%= profile.state %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

