<h2>Advanced Search</h2>

<%= form_for @user_search, html: {class: "pure-form"} do |s| %>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="col-sm-6 col-sm-offset-2">
      <div class="form-group">
        <%= s.label :name %><br />
        <%= s.text_field :name, class: 'form-control',placeholder: 'eg. Tanim Mahmud' %>
      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-2">
      <div class="form-group">
        <%= s.label :title %><br />
        <%= s.text_field :title, class: 'form-control', placeholder: 'eg. Front End' %>
      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-2">
      <div class="form-group">
        <%= s.label :address ,'Location' %><br />
        <%= s.text_field :address, class: 'form-control', placeholder: 'eg. Melbourne' %>
      </div>
    </div>
    <div class="actions col-sm-6 col-sm-offset-2"><%= s.submit "Search", class: "pure-button pure-button-primary btn btn-lg btn-primary" %></div>
  </div>
</div>
<% end %>
