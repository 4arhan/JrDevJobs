  <% end %>

  <div class="field">
    <%= f.label :job_type %>
    <%= f.select :job_type, options_for_select(job_types)  %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :position %>
    <%= f.select :position, options_for_select(positions) %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.select :location, options_for_select(locations) %>
  </div>

    <%= f.hidden_field :status, :value => 'pending' %>

  <div class="field">
    <%= f.label :day, 'Number of days' %>
    <%= f.text_field 'day' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
