<%= render 'layouts/navigations' %>
<p id="notice"><%= notice %></p>
<div class="container col-xs-10 col-xs-offset-1">
  <h2> Your Current Jobs</h2>

  <%# form_tag jobs_path, :method => 'get' do %>
      <%# text_field_tag :search, params[:search] %>
      <%# submit_tag "Search" %>
    <%# end %>

    <%# link_to "Advanced Search", new_search_path %>

  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Jobs</th>
        <th>Details</th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each_with_index do |job,index| %>
        <tr>
          <td><%= index + 1 %></td>
        </tr>
        <tr>
          <td>Job type</td>
          <td><%= job.job_type %></td>
        </tr>
        <tr>
          <td>Description</td>
          <td><%= link_to job, method: :get do %>
            <%= truncate(job.description, :length => 100, :omission => '... (continued)') %>
          <% end %></td>
        </tr>
        <tr>
          <td>Position</td>
          <td><%= job.position %></td>
        </tr>
        <tr>
          <td>Location</td>
          <td><%= job.location %></td>
        </tr>
        <tr>
          <td>Status</td>
          <td><%= job.status %></td>
        </tr>
        <tr>
          <td>Number of Days</td>
          <td><%= job.day %></td>
        </tr>
        <tr>
          <td>Amount</td>
          <td>$<%= job.day.to_i * 100 %></td>
        </tr>
        <tr>
          <td colspan="1"></td>
          <td>
            <% if job.payment.nil? %>
              <%= form_tag transactions_path do  %>

              <%= hidden_field_tag 'job_id', job.id %>
              <script
                src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-amount="	<%= job.day.to_i * 100 * 100 %>"
                data-name=""
                data-description=""
                data-email="<%= current_user.email %>"
                data-locale="auto">
              </script>
              <% end %>
            <% else %>
            	<%= link_to 'Paid', job %></td>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to 'Edit', edit_job_path(job) %> | <%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="container">
    <p><%= link_to ' + New Job', new_job_path, class: 'btn btn-default btn-xs', method: :get %></p>
  </div>
</div>
