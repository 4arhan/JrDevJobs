
<div class="container">
  <%= simple_form_for(@social) do |f| %>
    <% if @social.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h3><%= pluralize(@social.errors.count, "error") %> prohibited this social from being saved:</h3>

        <ul class="list-unstyled">
        <% social.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<!-- Resume Details Start -->
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="form-group">
        <%= f.label :network %>
          <%= f.select :network, options_for_select(socials),{}, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: 'eg. tanimmahmud', class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-offset-2 actions">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
