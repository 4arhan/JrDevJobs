<%= simple_form_for(@experience) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :employer %>
    <%= f.input :job_title %>
    <%= f.input :duration %>
    <%= f.input :responsibilities %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
