<h1>Advanced Search</h1>

<%= form_for @search, html: {class: "pure-form"} do |s| %>

  <div class="field">
    <%= s.label :keywords %><br />
    <%= s.text_field :keywords %>
  </div>

  <div class="field">
   <%= s.label :position %><br />
   <%= s.text_field :position %>
  </div>

  <div class="field">
   <%= s.label :location %><br />
   <%= s.text_field :location %>
  </div>


  <div class="actions"><%= s.submit "Search", class: "pure-button pure-button-primary" %></div>

<% end %>

<p><%= link_to 'Back', jobs_path %></p>
